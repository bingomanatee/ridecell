{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard",
    "standard-react"
  ],
  "plugins" : [
    "flow-vars"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "Action"       : false,
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__DEBUG_NEW_WINDOW__" : false,
    "__BASENAME__" : false
  },
  "rules": {
    "semi" : [1, "always"],
    "no-irregular-whitespace": 0,
    "max-len": [2, 120, 2],
    "indent": 0,
    "react/prop-types": 0,
    "react/jsx-indent": 0,
    "flow-vars/define-flow-type": 1,
    "flow-vars/use-flow-type": 1,
    "jsx-quotes": [1, "prefer-double"],
    "react/jsx-indent-props": 0,
    "react/jsx-space-before-closing": 0,
    "no-trailing-spaces": 1
  }
}
